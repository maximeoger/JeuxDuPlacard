{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "dist",
        "strict": true,
        "lib": ["es2017"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "*": ["node_modules/*"],
            "business/*": ["src/business"],
            "technical/*": ["src/technical"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": [
        "**/*.ts"
    ]
}