{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "*": ["node_modules/*"],
            "business/*": ["src/business"],
            "technical/*": ["src/technical"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts"]
}