{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "allowJs": true,
        "rootDir": ".",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "dist",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "src/index.ts", "src/app.ts"]
  }