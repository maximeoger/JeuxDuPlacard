{
  "compilerOptions": {
    "module": "commonjs", 
    "target": "ES2017",                 
    "outDir": "dist",
    "baseUrl": "./",                 
    "rootDir": "src",                       
    "strict": true,                           
    "moduleResolution": "classic",           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "declaration": true,
  },
  "exclude": ["node_modules", "dist"]
  //"include": ["src/", "src/index.ts"]
}
